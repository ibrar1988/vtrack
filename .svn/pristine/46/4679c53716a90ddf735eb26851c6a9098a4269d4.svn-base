<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Name :*"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:enabled="false"
                android:hint="Name"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>
        <!-- Comapany -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Company:"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:enabled="false"
                android:hint="Company"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>
        <!-- Phone No -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Phone No.:"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_phno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:enabled="false"
                android:hint="Phone No."
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>
        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:enabled="false"
                android:hint="Email"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>
        <!-- Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:enabled="false"
                android:hint="Title"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>
        <!-- Home Page -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Home Page:"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_homepage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:enabled="false"
                android:hint="Home Page"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>
        <!-- Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:enabled="false"
                android:hint="Address"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>

        <!-- Host Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Host Name:*"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_host_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:enabled="false"
                android:hint="Address"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>

        <!-- Visit Purpose -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Visit Purpose:"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_visit_purpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:enabled="false"
                android:hint="Address"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>
        <!-- Department -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Department"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_deptName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:enabled="false"
                android:hint="Department"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>
        <!-- whoom to meet-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Whom To Meet:"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_whomToMeet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:enabled="false"
                android:hint="Whom to meet"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>


        <!--meeting person Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_whomToMeet_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:enabled="false"
                android:hint="Email"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>
        <!--meeting person Phone no -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Phone No:"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_whomToMeet_phno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:enabled="false"
                android:hint="Phone No:"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>
        <!--meeting person Role -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Role:"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_whomToMeet_Emprole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:enabled="false"
                android:hint="Role"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:text="VERIFY"
            android:textColor="@android:color/white" />


    </LinearLayout>
</ScrollView>