<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp">

        <TableRow android:layout_margin="3dp">

            <TextView
                android:id="@+id/tv_filter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="#bf1919"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_filter_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Name" />
        </TableRow>

        <TableRow android:layout_margin="3dp">

            <TextView
                android:id="@+id/tv_filter_companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company:"
                android:textColor="#bf1919"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_filter_companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Company" />
        </TableRow>

        <TableRow android:layout_margin="3dp">

            <TextView
                android:id="@+id/tv_filter_startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date:"
                android:textColor="#bf1919"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_filter_startDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:editable="false"
                android:textColor="#000"
                android:hint="DD-MM-YYYY" />

            <ImageButton
                android:id="@+id/startDateImageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@id/et_filter_startDate"
                android:src="@drawable/date_picker_10"/>
        </TableRow>

        <TableRow android:layout_margin="3dp">

            <TextView
                android:id="@+id/tv_filter_endDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date:"
                android:textColor="#bf1919"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_filter_endDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:editable="false"
                android:textColor="#000"
                android:hint="DD-MM-YYYY" />

            <ImageButton
                android:id="@+id/endDateImageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@id/tv_filter_endDate"
                android:src="@drawable/date_picker_10"/>

        </TableRow>

        <TableRow android:layout_margin="3dp">

            <TextView
                android:id="@+id/tv_filter_whomToMeet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whom to Meet:"
                android:textColor="#bf1919"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_filter_whomToMeet"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Whom to Meet" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_filter_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="#bf1919"
        android:text="Apply Filter"
        android:textColor="#ffffff"
        android:textSize="12dp" />
</LinearLayout>
