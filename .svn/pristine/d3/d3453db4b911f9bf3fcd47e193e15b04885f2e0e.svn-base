<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_sort"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_sort_nameAsc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Name ASC" />

        <RadioButton
            android:id="@+id/rb_sort_nameDsc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Name DSC" />

        <RadioButton
            android:id="@+id/rb_sort_companyAsc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Company ASC" />

        <RadioButton
            android:id="@+id/rb_sort_companyDsc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Company DSC" />

        <RadioButton
            android:id="@+id/rb_sort_dateAsc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Date ASC" />

        <RadioButton
            android:id="@+id/rb_sort_dateDsc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Date DSC" />


    </RadioGroup>

    <Button
        android:id="@+id/btn_sort_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="#bf1919"
        android:text="Apply Sort"
        android:textColor="#ffffff"
        android:textSize="12dp" />
</LinearLayout>
