<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Name :*"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Company:*"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Company"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Phone No.:"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_phno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone No."
                android:numeric="integer"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Email"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Title"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Home Page:"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_homepage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Home Page"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Address"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Department:*"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/spinner_dept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Whom To Meet:*"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <!--<EditText
                android:id="@+id/et_add_whomToMeet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Whom to meet"
                android:singleLine="true"
                android:textColor="#000000" />-->
            <AutoCompleteTextView
                android:id="@+id/et_add_whomToMeet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Whom to meet"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_whomToMeet_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:enabled="false"
                android:singleLine="true"
                android:textColor="#000000" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Mobile No:"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_whomToMeet_phno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone no"
                android:singleLine="true"
                android:enabled="false"
                android:textColor="#000000" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Role :"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_whomToMeet_Emprole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Role"
                android:singleLine="true"
                android:enabled="false"
                android:textColor="#000000" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_add_scannedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Scanned Date:"
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_add_scannedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Scanned Date"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_businessCard_captured"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/default_card" />

        <Button
            android:id="@+id/btn_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:text="VERIFY"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_overRidden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:text="OVERRIDDEN"
            android:textColor="@android:color/white"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>